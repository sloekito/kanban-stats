apiVersion: v1
kind: ReplicationController
metadata:
  name: <%= name %>
  labels:
    app: <%= app_name %>
    stack: <%= stack %>
spec:
  replicas: 2
  selector:
    app: <%= app_name %>
    deploy: <%= deploy_hex %>
  template:
    metadata:
      labels:
        app: <%= app_name %>
        stack: <%= stack %>
        deploy: <%= deploy_hex %>
    spec:
      nodeSelector:
        aws.amazon.com/instance-type: m3.medium
      containers:
      - name: <%= app_name %>
        image: <%= account %>/<%= image %>:<%= version %> 
        readinessProbe:
          httpGet:
            path: /version
            port: <%= container_port %>
          # length of time to wait for a pod to initialize
          # after pod startup, before applying health checking
          initialDelaySeconds: 15
          timeoutSeconds: 2
        ports:
        - containerPort: <%= container_port %>